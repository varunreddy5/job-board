
<!-- If the job is created by making the payment then this form should not be displayed -->
  <form action="/charge" method="post" id="payment-form">
    <div class="form-row">
      <label for="card-element">
        Credit or debit card
      </label>
      <div id="card-element">
        <!-- A Stripe Element will be inserted here. -->
      </div>

      <!-- Used to display Element errors. -->
      <div id="card-errors" role="alert"></div>
    </div>
    <% if current_user.stripe_id.present? %>
      <h5>Previously used card</h5>
      <table class="table">
        <thead>
          <th>Card Brand</th>
          <th>Last 4 digits</th>
          <th>Expiration Month</th>
          <th>Expiration year</th>
        </thead>
        <tbody>
          <td>current_user.card_brand</td>
          <td>current_user.card_last4</td>
          <td>current_user.card_exp_month</td>
          <td>current_user.card_exp_year</td>
        </tbody>

      </table>
    <% end %>
    <!-- <button class="btn btn-info">Submit Payment</button> -->
  </form>
