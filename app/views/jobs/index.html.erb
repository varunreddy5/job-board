<div class="index-jobs">
  <div class="row">
    <div class="col-md-2 categories text-center">
      <ul class="nav flex-column mt-5">
        <% @jobs.each do |job| %>
          <li class="nav-item">
            <a class="nav-link job-type-nav" href="#"><%= job.job_type.capitalize %></a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-10 jobs-section pt-5 pb-2">
      <% @jobs.each do |job| %>
        <div class="row">
          <div class="col-md-2 text-right">
            <%= image_tag(job.avatar.thumb.url) %>
          </div>
          <div class="col-md-7">
            <h3><%= job.title %></h3>
            <%= link_to(job.job_author, job.url, class: "job-author") %>

            <p><%= job.description.truncate(170) %></p>
          </div>
          <div class="col-md-3 text-center">
            <p class="job-type <%= job.job_type.downcase! %>"><%= job.job_type.capitalize %></p>
            <p><%= job.location %></p>
          </div>
        </div>
        <hr width="85%">
      <% end %>
    </div>
  </div>
</div>
