<div class="index-jobs">
  <div class="row">
    <div class="col-md-2 categories text-center">
      <ul class="nav flex-column mt-5" id="nav">
        <li class="nav-item">
          <%= link_to("All Jobs", jobs_path, class: "nav-link job-type-nav all") %>
        </li>
        <li class="nav-item">
          <%= link_to("Internship", jobs_path(job_type: "Internship"), class: "nav-link job-type-nav internship") %>
        </li>
        <li class="nav-item">
          <%= link_to("Full-time", jobs_path(job_type: "Full-time"), class: "nav-link job-type-nav full-time") %>
        </li>
        <li class="nav-item">
          <%= link_to("Part-time", jobs_path(job_type: "Part-time"), class: "nav-link job-type-nav part-time") %>
        </li>
        <li class="nav-item">
          <%= link_to("Contract", jobs_path(job_type: "Contract"), class: "nav-link job-type-nav contract") %>
        </li>
        <li class="nav-item">
          <%= link_to("Freelance", jobs_path(job_type: "Freelance"), class: "nav-link job-type-nav freelance") %>
        </li>

      </ul>
    </div>
    <div class="col-md-10 jobs-section pt-5 pb-2">
      <% @jobs.each do |job| %>
        <div class="row">
          <div class="col-md-1 offset-md-1 text-right">
            <%= image_tag(job.avatar.url, class: "img-fluid") %>
          </div>
          <div class="col-md-7">
            <%= link_to(job.title, job_path(job), class: "job-title") %>

            <%= link_to(job.job_author, job.url, class: "job-author") %>

            <p><%= job.description.truncate(170) %></p>
          </div>
          <div class="col-md-3 text-center">
            <p class="job-type <%= job.job_type.downcase! %>"><%= job.job_type.capitalize %></p>
            <p><%= job.location %></p>
          </div>
        </div>
        <hr width="85%">
      <% end %>
    </div>
  </div>
</div>
